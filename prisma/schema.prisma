generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

enum Role {
  ADMIN
  STUDENT
}

model User {
  id           Int      @id @default(autoincrement())
  studentId    String   @unique
  studentName  String
  passwordHash String
  role         Role     @default(STUDENT)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // 1 student - n certificates
  certificates Certificate[]
}

model Certificate {
  id            Int     @id @default(autoincrement())
  courseName    String  @default("")
  fileHash      String  @unique
  ipfsFile      String  @default("") // https://ipfs.io/ipfs/fileCID
  ipfsMetadata  String? @default("") // https://ipfs.io/ipfs/metadataCID
  issuerAddress String  @default("0x0000000000000000000000000000000000000000")

  // blockchain info
  blockchainTx String? @default("") // Tx hash khi gửi lên blockchain
  mintTx       String? @default("") // Tx hash khi mint NFT
  tokenId      BigInt? @default(0) // NFT tokenId (on-chain)
  tokenURI     String? @default("") // ipfs://metadataCID

  // timestamps
  startDate DateTime? @default(now())
  endDate   DateTime? @default(now())
  status    String    @default("pending") // pending | verified | failed
  issuedAt  DateTime  @default(now())

  // Relations
  userId  Int
  student User @relation(fields: [userId], references: [id])
}
